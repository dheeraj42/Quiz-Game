<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizGame"
        tools:targetApi="34">
        <activity
            android:name=".Quiz_Page"
            android:exported="false" />
        <activity
            android:name=".Forgot_Password"
            android:exported="false"
            android:parentActivityName=".Login_page"
            android:theme="@style/AppTheme_Login_Page" />
        <activity
            android:name=".Sign_up_page"
            android:exported="false"
            android:parentActivityName=".Login_page"
            android:theme="@style/AppTheme_Login_Page" />
        <activity
            android:name=".Login_page"
            android:exported="false"
            android:theme="@style/AppTheme_Login_Page" />
        <activity
            android:name=".Splash_Screen"
            android:exported="true"
            android:theme="@style/AppTheme_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>